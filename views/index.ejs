<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <title>لیست ثبت‌نامی‌ها</title>
</head>
<body>
    <h1>لیست ثبت‌نامی‌ها</h1>
    <a href="/register">ثبت‌نام جدید</a>
    <table border="1">
        <tr>
            <th>نام</th>
            <th>ایمیل</th>
            <th>عملیات</th>
        </tr>
        <% registrations.forEach((registration, index) => { %>
        <tr>
            <td><%= registration.name %></td>
            <td><%= registration.email %></td>
            <td>
                <a href="/edit/<%= index %>">ویرایش</a>
                <a href="/delete/<%= index %>">حذف</a>
            </td>
        </tr>
        <% }) %>
    </table>
</body>
</html>
